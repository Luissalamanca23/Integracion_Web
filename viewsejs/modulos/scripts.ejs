async function obtenerCMF() {
  try {
      const response = await fetch('/api/obtenerCMF');
      const mensaje = await response.json();
      console.log(mensaje);
      var texto="-                Dolar: $"+mensaje.Dolar+" CLP      -           Euro: $"+mensaje.EUR+" CLP          -         UF: $"+mensaje.UF+" CLP";
      console.log(texto);
      document.getElementById("barraQueSeMueve").innerHTML=texto;
  }catch (e){
    console.log(e);
  }
}

async function obtenerClima() {
  try {
      const response = await fetch('/api/obtenerClima');
      const weather = await response.json();
      console.log(weather);
      document.getElementById("weather-info").innerHTML=weather.main.temp+' °C, '+weather.weather[0].description;
  }catch (e){
    console.log(e);
  }
}

